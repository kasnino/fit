
    <!-- AQUIIII EL LANDING PAGE
  -->

 <div  class="pin post_panel level-2", style="text-transform: capitalize;" >
   <div class="colorr">
   <%= link_to avatar_for(post.user, size:38), post.user %> 
    <a><%= link_to post.user.name, post.user %></a>
     
   </div>

   <br>
           <div class="post_panel_imagen level-3 img-fluid" style="height: 150px;">
            <br>
            <%= imagen_for(post, size:1200) %>
          </div>
  <br>
            <div class="main-body level-4">
              <center>
                  <h3 class="post-title">
                     <%= link_to post.title, post %>   
                  </h3>
              </center> 
            </div>
   
           <div class="icono">
             <span class="text-nuted pull-right">
              <i class="far fa-heart" style="color:#BE81F7;"></i>
              <i class="far fa-comments" style="color:#BE81F7;"></i>
              <%= post.comments.count %>
              <i class="far fa-eye" style="color:#BE81F7;"></i>
            </span>
          </div>

          
           <div class="color", 
           style="background-color: <%= post.category.color %>"> 
           <%= link_to post.category.name, category_path(post.category) %>
         </div>
     
  

  </div>      


