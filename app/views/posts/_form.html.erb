    <%= f.label :all_tags, 'Categorias'%>
    <div class="col-lg-10"><br>
      <%= f.text_field :all_tags, :class => 'form-control', :placeholder => 'Categorias Separadas en comas (,)'  %>
    </div>
    <%=f.error_span(:title) %>
  </div> -->
<br>
  <div>
    <h3>Categorias</h3>
    <% @categories.each do |category|%>
     <div class="field">
      <%= check_box_tag "categories_ids[]", category.id %> 
      <%= category.name%>
     </div>

     <%end%>
  </div>


 <br>
<div class="hero-avatar">
            <label class="change-avatar" id="change-avatar" style="background-image: url('<%= @post.imagen.url %>')">
              <%= f.file_field :imagen %>
              <%= icon('camera') %>
            </label>
            
          </div>


