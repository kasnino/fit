

<%= form_for([@post,@post.comments.build]) do |f| %>
<body class="body-comment">

<div class="comments-container">

<ul id="comments-list" class="comments-list">
  <li>
      <div class="comment-main-level">

        <div class="comment-avatar">
          
        
             
       <%= avatar_for(@post.user, size:40) %>
       
       
          
        </div>
 
            <div class="comments-box">
                <label id="placeholder" aria-hidden="true" slot="label" class="style-scope ytd-commentbox">
                 grega un comentario público…
                </label>
                    
                  
                <div class="comments-content"><br>
                <%= f.text_area :body, :rows => 5, :cols => 80, :class => 'form-control'%>
                </div>

                <%= f.submit :Publicar, :class => 'btn btn-primary'  %>
                  
<% end %>
            </div>  
      </div>    

   </li>

  </ul>    
 </div>
 </body>

