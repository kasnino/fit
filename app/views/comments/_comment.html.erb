<body class="body-comment">

	<div class="comments-container">

	   <ul id="comments-list" class="comments-list">
	     <li>
	      
	      <div class="comment-main-level">

	        <div class="comment-avatar">
	          
	        <br>
	        <%= avatar_for(@post.user, size:40) %>  
	  		     <%= link_to @post.user.name, @post.user %>
	  		     <small style="float: right;"> publicado <%= @post.created_at.strftime("%Y-%m-%d")  %></small>
                
	            <div class="comments-box">
	                  <div class="comments-head">


	                     
	                  </div>

	                  <div class="comments-content">

				              <div class="text_area">

				              <%= comment.commenter %>
				              <%= comment.body %>

				              </div>
				     <div class="iconos" style="float: right;">  
		              	<i class="far fa-heart" style="color:#BE81F7;"></i>
				        <i class="fas fa-reply" style="color:#BE81F7;"></i>
				        <i class="far fa-eye" style="color:#BE81F7;"></i>
                 </div>
	                  </div>
	            
	              </div>

	        </div>

	      </div>    
		      <% if user_signed_in? %>
		      <%= link_to 'Elimimnar comment', [comment.post, comment],
		      method: :delete,
		      data: { confirm: 'Are you sure?' } %>
		      <% end %>
	   </li>

	  </ul>    
	 </div>

 </body>