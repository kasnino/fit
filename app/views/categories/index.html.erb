<p id="notice"><%= notice %></p>

<h1>Categorias</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><div class="color", style="background-color: <%= category.color %>"> <%= category.color %></div></td>
        <td><%= link_to 'Ver', category, class: 'btn btn-default'%></td>
        <td><%= link_to 'Editar', edit_category_path(category),class: 'button green-button pull-left edit-button' %></td>
        <td><%= link_to 'Destruir', category,class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoria', new_category_path,class: 'button green-button pull-left edit-button' %>
